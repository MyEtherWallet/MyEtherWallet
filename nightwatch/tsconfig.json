// Used by nightwatch to execute tests
//
// This config is mostly provided by Nightwatch's default
// configuration @ 2024-10-29
{
  "include": [
    "../node_modules/@nightwatch/**/*",
    "../src/components/**/*",
    "../tests/e2e/**/*",
  ],
  "files": ["nightwatch.d.ts"],
  "ts-node": {
    "transpileOnly": true
  },
  "compilerOptions": {
    // Language & Environment
    "target": "ES2023",           // https://www.typescriptlang.org/tsconfig/#target
    // "lib": ["ESNext", "dom"],  // https://www.typescriptlang.org/tsconfig/#lib

    // Module
    // CommonJS & < Node16
    "module": "commonjs",         // https://www.typescriptlang.org/tsconfig/#module
    "moduleResolution": "Node",   // https://www.typescriptlang.org/tsconfig/#moduleResolution
    "resolveJsonModule": true,    // https://www.typescriptlang.org/tsconfig/#resolveJsonModule
    // "types": ["nightwatch"],
    "rootDir": "../",             // https://www.typescriptlang.org/tsconfig/#rootDir

    // JavaScript support
    "allowJs": true,              // https://www.typescriptlang.org/tsconfig/#allowJs

    // Emit
    "noEmit": true,               // https://www.typescriptlang.org/tsconfig/#noEmit

    // Interop constraints
    "esModuleInterop": true,                  // https://www.typescriptlang.org/tsconfig/#esModuleInterop
    "allowSyntheticDefaultImports": true,     // https://www.typescriptlang.org/tsconfig/#allowSyntheticDefaultImports
    "forceConsistentCasingInFileNames": true, // https://www.typescriptlang.org/tsconfig/#forceConsistentCasingInFileNames

    // Completeness
    "skipLibCheck": true,         // https://www.typescriptlang.org/tsconfig/#skipLibCheck
  },
}
